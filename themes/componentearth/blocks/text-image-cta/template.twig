{% set custom_class = "bg-[transparent]" %}

<section class="{{ block.slug ?? 'text-image-cta' }} {{ custom_class }}">
    {% if fields.anchor|length > 0 or custom_id %}
        <div class="section-anchor" id="{{ custom_id ?? fields.anchor }}"></div>
    {% endif %}

    {% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-md" %}
    {% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-md" %}

    <div class="container">
        <div class="{{ pt }} {{ pb }}">                                 
            <div class="flex max-lg:flex-col items-between gap-sm mx-auto {% if fields.flip_text_image_column %} flex-row-reverse {% endif %}">
                {% if fields.image %}
                    <div class="2xl:w-1/2 w-full max-lg:h-[30rem] h-auto bg-cover overflow-hidden {% if fields.flip_text_image_column %} rounded-bl-[8rem] lg:ml-[4.75rem] {% else %} lg:mr-[0.75rem] rounded-br-[8rem] {% endif %}" style="background-image: url({{ fields.image.url }})">
                        <img class="invisible w-full h-full object-cover" src="{{ fields.image.url }}" />
                    </div>
                {% endif %}
                {% if fields.title %}
                    <div class="relative lg:mt-[5rem] max-xl:w-full flex flex-col w-1/2 gap-[2rem] {% if fields.flip_text_image_column %} items-start lg:mr-[-5rem] {% else %} items-end lg:ml-[-5rem] text-right {% endif %}">
                        <h3 class="2xl:w-[53rem] text-[var(--theme-color-dark)] font-tertiary [&_p]:!~text-[3.15625rem]/[5.15625rem] [&_p]:leading-none [&_strong]:bg-primary [&_strong]:p-[0.25rem] [&_strong]:font-normal [&_strong]:text-white">{{ fields.title }}</h3>
                        
                        {% if fields.link %}                
                            {% set custom_class = 'text-primary hover:text-primary-dark' %}							
                        
                            {% include 'components/cta.twig' with {
                                'class' : custom_class,
                                'cta': fields.link, 
                                'icon': false,
                                'is_btn': false
                            } %}
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>