{% set custom_class = 'bg-white' %}

<section class="{{ block.slug }} {{ custom_class }} looping-infinite-logos">
	{% if block.anchor %}
		<div class="section-anchor" id="{{ block.anchor ?? block.id }}"></div>
	{% endif %}

	{% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "st-lg" %}
	{% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-lg" %}

	<div class="container-fluid">
		<svg class="absolute left-0 top-0 h-full z-50 w-[400px]" width="130" height="37" viewBox="0 0 130 37" fill="none" xmlns="http://www.w3.org/2000/svg">
			<rect width="37" height="130" transform="matrix(5.49704e-08 1 1 -3.47585e-08 0 0)" fill="url(#paint0_linear_7937_1070)"/>
			<defs>
			<linearGradient id="paint0_linear_7937_1070" x1="23.9608" y1="6.10867e-06" x2="23.9605" y2="117" gradientUnits="userSpaceOnUse">
			<stop stop-color="white"/>
			<stop offset="1" stop-color="white" stop-opacity="0"/>
			</linearGradient>
			</defs>
		</svg>

		<div class="{{ pt }} {{ pb }}">
			<div class="flex ~gap-[4rem]/[8.063rem] items-center justify-center">
				<div class="logo-groups">
					{% for i in 1..4 %}
						<div class="logo-group">
							{% for logo in logos %}
								<div class="skeleton">
									<img class="logo-image" src="{{ logo.url }}" alt="{{ logo.alt }}"/>
								</div>
							{% endfor %}
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<svg class="absolute right-0 top-0 h-full z-50 w-[400px]" width="130" height="37" viewBox="0 0 130 37" fill="none" xmlns="http://www.w3.org/2000/svg">
			<rect x="130" width="37" height="130" transform="rotate(90 130 0)" fill="url(#paint0_linear_7937_1071)"/>
			<defs>
			<linearGradient id="paint0_linear_7937_1071" x1="153.961" y1="6.10867e-06" x2="153.961" y2="117" gradientUnits="userSpaceOnUse">
			<stop stop-color="white"/>
			<stop offset="1" stop-color="white" stop-opacity="0"/>
			</linearGradient>
			</defs>
		</svg>
	</div>
</section>