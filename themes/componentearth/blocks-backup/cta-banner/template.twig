{% set custom_class = "bg-white" %}

<section class="{{ block.slug ?? 'cta-banner' }} {{ custom_class }}">
    {% if fields.anchor|length > 0 or custom_id %}
        <div class="section-anchor" id="{{ custom_id ?? fields.anchor }}"></div>
    {% endif %}

    {% set pt = fields.padding_top and fields.padding_top != "unset" ? fields.padding_top : "" %}
    {% set pb = fields.padding_top and fields.padding_bottom != "unset" ? fields.padding_bottom : "sb-lg" %}

    <div class="container">
        <div class="{{ pt }} {{ pb }}">            
            <div class="bg-black relative flex max-lg:flex-col items-start justify-between overflow-hidden lg:gap-[9.9375rem] gap-[2rem] px-[5rem] max-lg:p-[2rem]">          
          
                <div class="lg:max-w-[36.4375rem] flex flex-col items-stretch justify-between h-full transition-top relative z-50">                    
                    <div class="flex flex-col ~gap-[1.5rem]/[1.75rem] justify-center items-center lg:min-h-[32.125rem]">
                        {% if fields.heading.value|length > 0 %}
                            <div class="w-full max-md:flex max-md:flex-col max-md:gap-[0.75rem] relative text-left">                        
                                {% include 'components/heading.twig' with {
                                    'class': 'main-title text-white ',
                                    'indent': '<span class="max-md:hidden w-[12.5rem] h-[2.5rem] shrink-0"></span>',
                                    'value': fields.heading.value, 
                                    'type': fields.heading.type != "default" ? fields.heading.type : "h3",
                                    'has_custom_style': fields.heading.has_custom_style,
                                    'style': fields.heading.style,
                                    'to_words': true
                                } %}
                            </div>
                        {% endif %}

                        {% if fields.paragraph|length > 0 or fields.cta.url|length > 0 %}
                            <div class="flex flex-col items-start justify-start gap-md max-w-[40.625rem] w-full text-left">
                                {% if fields.paragraph|length > 0 %}
                                    <h6 class="text-white">{{ fields.paragraph|striptags }}</h6>
                                {% endif %}
                                
                                {% if fields.cta.url|length > 0 %}
                                    {% set custom_class = 'btn btn-light btn-hover-dark' %}							
                                
                                    {% include 'components/cta.twig' with {
                                        'class' : custom_class,
                                        'cta': fields.cta, 
                                        'icon': true,
                                    } %}
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
                {% if fields.image %}
                    <img class="lg:max-w-[27rem] w-full" src="{{ fields.image.url }}" />
                {% endif %}
            </div>
        </div>
    </div>
</section>